<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>NC_Manager</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>SC_Manager</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Order_Status__c</field>
        <field>Product__c</field>
        <field>Quantity__c</field>
        <field>RecordType</field>
        <field>Tracking_Reference__c</field>
        <field>Estimated_Recieve_Date_Start__c</field>
        <field>Estimated_Recieve_Date_End__c</field>
        <field>Order_Date__c</field>
        <field>Approved__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Order_ready</name>
                <type>Task</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>pattonj1272@gmail.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>Product__r.price__c *  Quantity__c &gt; 100000</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Get Managers sign off</label>
        <name>Get_Managers_sign_off</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Super_Expensive_order</name>
                <type>Task</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>bberry23423423@not.email</name>
                <type>user</type>
            </approver>
            <approver>
                <name>pattonj1272@gmail.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>Product__r.price__c *  Quantity__c  &gt; 1000000</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Get_approval_for_super_expensive_deliveries</label>
        <name>Get_approval_for_super_expensive_deliveries</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>bberry23423423@not.email</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>( Product__r.Total_Incoming__c  +  Product__r.Total_In_Stock__c   - ( Product__r.Total_Outstanding__c  +  Quantity__c  )) &lt; 0</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Can_order_more</label>
        <name>Can_order_more</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>CreatedBy</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>User_still_approve</label>
        <name>User_still_approve</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>( Product__r.price__c  *  Quantity__c  &gt; 100000 &amp;&amp; 
( ISPICKVAL( Order_Status__c , &quot;pending&quot;) ) &amp;&amp; 
(  RecordType.Name  ==&quot;Order&quot; ||     
       RecordType.Name  == &quot;Picking&quot; )) || (( Product__r.Total_Incoming__c  +  Product__r.Total_In_Stock__c   - ( Product__r.Total_Outstanding__c  +  Quantity__c  )) &lt; 0) || 1 == 1</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Canceled</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Canceled_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>not_approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Get_approval_to_accept_or_delever_items2</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
